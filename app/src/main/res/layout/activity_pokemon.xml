<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="me.lucasbatista.pokedex.PokemonViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".PokemonActivity">
        <TextView android:text="@{viewModel.pokemon.name}"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:id="@+id/text_view"
                  tools:text="Pokemon name"/>
        <Button
                android:text="fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/text_view"
                app:layout_constraintEnd_toEndOf="@+id/text_view"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/text_view"
                android:onClick="@{() -> viewModel.create()}"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
